            "button9": "<ðŸ–±",
        }
        for _, key in enumerate(keys):
            for skey, ssub in subs.items():
                key = re.sub(skey, ssub, key)
            keys[_] = key
    # for _ in range(N):
    #     outstr += "<b>"+ defns[_] + "</b>"+ "\n"
