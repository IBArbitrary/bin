    for _ in range(N):
        outstr += f"<span color='{CLSC}'>{clss[_].rjust(dC)}</span> <b>{defns[_].ljust(dN)}</b> {keys[_]}|"
    print(outstr[:-1])

if __name__ == "__main__":
    n = len(sys.argv)
    symb = False
    if n > 1:
        symb = True
    rofiprint(CONFIG_FILE, symb=symb)
