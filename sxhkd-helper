            "XF86AudioNext": "Fn + F10",
            "XF86MonBrightnessDown": "Fn + F2",
            "XF86MonBrightnessUp": "Fn + F3",
            "XF86Launch2": "ðŸž›",
            "{1-9,0}": "#",
            "{1-9}": "#",
            "Left": "â†",
            "Right": "â†’",
            "Down": "â†“",
            "Up": "â†‘",
            "Prior": "â­½",
            "Next": "â­»",
            "backslash": r"\\",
